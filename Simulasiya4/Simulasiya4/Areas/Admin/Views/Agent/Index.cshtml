@model List<Agent>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-info" asp-action="Create">Add Agent</a>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td><img src="~/imgs/@item.ImageUrl" alt="@item.ImageUrl" height="50px" width="50px" /></td>
                        <td>@item.Name</td>
                        @if(item.Designation != null){
                            <td>@item.Designation!.Name</td>
                        }
                        else{
                            <td>-</td>
                        }
                        <td><a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Edit</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remove</a></td>
                        @if(!item.IsDeleted){
                            <td><a class="btn btn-warning" asp-action="Toggle" asp-route-id="@item.Id">Hide</a></td>
                        }
                        else{
                            <td><a class="btn btn-secondary" asp-action="Toggle" asp-route-id="@item.Id">Show</a></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

